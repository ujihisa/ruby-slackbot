# Ignore bundler config.
/.bundle

# Ignore the default SQLite database.
/db/*.sqlite3
/db/*.sqlite3-journal
/db/*.sqlite3-*

# Ignore all logfiles and tempfiles.
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles, but keep the directory.
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Ignore uploaded files in development.
/storage/*
!/storage/.keep

/public/assets
.byebug_history

# Ignore master key for decrypting credentials and more.
/config/master.key

/public/packs
/public/packs-test

# [ujihisa] Yes, this is very safe just to comment out this key here, since we don't use cookies
#           Note that I don't keep the encryption key. Just remove this file and create again from scratch. Nothing has been encrypted.
!/config/credentials/production.key
!/tmp/local_secret.txt

/vendor/bundle

/config/credentials/production.key
